<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestauranteKCMS.Views.PageInit"  Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="DodgerBlue" HeightRequest="600" CornerRadius="100" Margin="0,-150,0,-50">
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    
                    <Label Text="Restaurante KCMS" VerticalOptions="Center" HorizontalOptions="Center"
                            FontAttributes="Bold" FontSize="25" Margin="30"/>
                    <Image Source="kcms"/>
                    
                </StackLayout>
            </Frame>
            <Button Text="Entrar" BackgroundColor="SkyBlue" WidthRequest="100" HeightRequest="50" Margin="70,10,70,0"
                    CornerRadius="20" Clicked="EnterButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>